# directories
alias -g Desktop=$DESKTOP
alias -g Trash=$TRASH
alias -g Work=$WORK

# files
alias -g hosts=/etc/hosts

# moving around
alias ls='ls -aF'
alias ll='ls -alF'
alias pd='pushd'
alias dirs='dirs -v'
alias swap='pushd +1'

# cleanup
alias cl='rm *~ .*~ .#* #*'
alias rc='rm core'
alias rmds='find . -type f -name .DS_Store -exec rm {} \;'
alias rm='rm -i'

# typos and bad habits
alias cd..='cd ..'
alias mroe=more	   # chill, it's linked to less
alias aliases=alias

# programs
alias em='emacs'

# mac os specific
alias sf='SetFile' # -a V filename # => invisible
alias sloff='sudo chmod 600 /System/Library/CoreServices/Search.bundle/Contents/MacOS/Search'
alias slon='sudo chmod 755 /System/Library/CoreServices/Search.bundle/Contents/MacOS/Search'
alias killmenu='killall SystemUIServer'

# linking
alias ln_mysqlsock='sudo ln -s /opt/local/var/run/mysql5/mysqld.sock /tmp/mysql.sock'
alias ln_zshenv="ln -s $HOME/.zshenv $ZDOTDIR"

# helpers
alias ip='ifconfig -a | grep "inet " | grep -v tunnel | cut -d" " -f2'
